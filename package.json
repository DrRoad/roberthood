{
  "name": "cycle-browserify-boilerplate",
  "version": "1.0.0",
  "description": "Cycle Browserify Babel boilerplate.",
  "main": "index.js",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/kahlil/cycle-browserify-boilerplate.git"
  },
  "scripts": {
    "clean": "rimraf build",
    "budo": "budo src/app.js -l -o",
    "build:js:prod": "npm-run-all clean browserify:prod",
    "build:css": "node-sass src/styles/main.scss --outFile main.css --source-map true --output build",
    "build:css:prod": "node-sass src/styles/main.scss --outFile main.css --source-map true --output build --output-style compressed",
    "watch:scss": "chokidar src/styles/*.scss -c 'npm run build:css'",
    "test": "testem",
    "lint": "eslint src test --fix",
    "start": "npm-run-all clean build:css --parallel watch:scss budo"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-eslint": "^4.1.8",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "budo": "^8.0.4",
    "chokidar-cli": "^1.2.0",
    "eslint": "^2.1.0",
    "eslint-config-cycle": "^3.2.0",
    "eslint-plugin-cycle": "^1.0.2",
    "exorcist": "^0.4.0",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.5.1",
    "require-globify": "^1.3.0",
    "rimraf": "^2.5.1",
    "tape": "^4.4.0",
    "testem": "^1.2.2",
    "uglify-js": "^2.6.1",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "@cycle/core": "^6.0.2",
    "@cycle/dom": "^9.0.2",
    "@cycle/isolate": "^1.2.0",
    "cyclic-history": "^0.1.0",
    "cyclic-router": "^0.3.0",
    "ramda": "^0.19.1",
    "rx": "^4.0.7",
    "rx-combine-latest-obj": "^1.0.2",
    "switch-path": "^1.1.3"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "sourceMap": true,
          "sourceMapRelative": "."
        }
      ],
      "require-globify"
    ]
  },
  "license": "MIT"
}
