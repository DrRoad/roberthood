{
  "framework": "tap",
  "serve_files": ["build/test-bundle.js"],
  "src_files": [
    "src/**/*.js",
    "test/**/*.js"
  ],
  "launchers": {
    "Node": {
      "command": "node build/test-bundle.js",
      "protocol": "tap"
    }
  },
  "before_tests": "browserify test/test.js -o build/test-bundle.js",
  "on_exit": "rm build/test-bundle.js",
  "launch_in_dev": ["chrome"]
}
